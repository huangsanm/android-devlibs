<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.huashengmi.devlibs.MainActivity"
    tools:showIn="@layout/activity_main">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/my_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:fadeDuration="300"
        app:actualImageScaleType="focusCrop"
        app:placeholderImage="@color/colorPrimaryDark"
        app:placeholderImageScaleType="fitCenter"
        app:failureImage="@color/colorAccent"
        app:failureImageScaleType="centerInside"
        app:retryImage="@color/colorPrimary"
        app:retryImageScaleType="centerCrop"
        app:progressBarImageScaleType="centerInside"
        app:progressBarAutoRotateInterval="1000"
        app:backgroundImage="@color/colorPrimaryDark"
        app:overlayImage="@color/colorAccent"
        app:pressedStateOverlayImage="@color/colorPrimary"
        app:roundAsCircle="false"
        app:roundedCornerRadius="1dp"
        app:roundTopLeft="true"
        app:roundTopRight="false"
        app:roundBottomLeft="false"
        app:roundBottomRight="true"
        app:roundWithOverlayColor="@color/colorAccent"
        app:roundingBorderWidth="2dp"
        app:roundingBorderColor="@color/colorPrimaryDark"
        />


</RelativeLayout>
